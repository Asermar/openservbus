<view>
    <columns>
        <group name="data" numcolumns="12" valign="bottom">
            <column name="id" order="100" numcolumns="1">
                <widget type="text" fieldname="id" readonly="true"/>
            </column>
            <column name="underbook" order="110" numcolumns="1">
                <widget type="autocomplete" fieldname="idsubreserva" required="true" readonly="true" onclick="EditSubReservaTour">
                    <values source="tour_subreservas" fieldcode="id" fieldtitle="id"/>
                </widget>
            </column>
            <column name="route-code" order="120" numcolumns="3">
                <widget type="text" fieldname="routecode" required="true"/>
            </column>
            <column name="route-name" order="130" numcolumns="7">
                <widget type="text" fieldname="routename" required="true"/>
            </column>
            <column name="service-type" titleurl="ConfigOpenServBus?activetab=ListServiceType" order="140">
                <widget type="select" fieldname="idtiposervicio" required="true">
                    <values source="service_types" fieldcode="idservice_type" fieldtitle="nombre"/>
                </widget>
            </column>
            <column name="service-discretionary" order="160">
                <widget type="select" fieldname="idserviciodiscrecional" onclick="EditService">
                    <values source="services" fieldcode="idservice" fieldtitle="nombre"/>
                </widget>
            </column>
            <column name="service-regular" order="170">
                <widget type="select" fieldname="idservicioregular" onclick="EditServiceRegular">
                    <values source="service_regulars" fieldcode="idservice_regular" fieldtitle="nombre"/>
                </widget>
            </column>
            <column name="status" titleurl="ConfigOpenServBus?activetab=EditEstadoServicioTour" order="180">
                <widget type="select" fieldname="idestado" required="true">
                    <values source="tour_servicios_estados" fieldcode="id" fieldtitle="name"/>
                </widget>
            </column>
            <column name="closed" order="190">
                <widget type="checkbox" fieldname="closed"/>
            </column>
        </group>
        <group name="pick-up" title="pick-up" numcolumns="12">
            <column name="pick-up-point" order="100" numcolumns="12">
                <widget type="text" fieldname="pickuppoint" required="true"/>
            </column>
            <column name="pick-up-date" order="110">
                <widget type="date" fieldname="pickupdate" required="true"/>
            </column>
            <column name="pick-up-time" order="120">
                <widget type="time" fieldname="pickuptime" required="true"/>
            </column>
            <column name="pick-up-flight-id" order="130">
                <widget type="text" fieldname="pickupflightid"/>
            </column>
            <column name="pick-up-flight-time" order="140">
                <widget type="time" fieldname="pickupflighttime"/>
            </column>
        </group>
        <group name="destination" title="destination" numcolumns="12">
            <column name="destination-point" order="100" numcolumns="12">
                <widget type="text" fieldname="destinationpoint" required="true"/>
            </column>
            <column name="destination-date" order="110">
                <widget type="date" fieldname="destinationdate" required="true"/>
            </column>
            <column name="destination-time" order="120">
                <widget type="time" fieldname="destinationtime" required="true"/>
            </column>
            <column name="destination-flight-id" order="130">
                <widget type="text" fieldname="destinationflightid"/>
            </column>
        </group>
        <group name="log" title="logs" numcolumns="12">
            <column name="creation-date" order="100">
                <widget type="datetime" fieldname="creationdate" readonly="true"/>
            </column>
            <column name="user" order="110">
                <widget type="text" fieldname="nick" readonly="true"/>
            </column>
            <column name="last-update" order="120">
                <widget type="datetime" fieldname="lastupdate" readonly="true"/>
            </column>
            <column name="last-user" order="130">
                <widget type="text" fieldname="lastnick" readonly="true"/>
            </column>
        </group>
    </columns>
</view>
