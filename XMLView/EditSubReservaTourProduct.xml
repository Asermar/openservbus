<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="id" display="none" order="100">
                <widget type="text" fieldname="id" readonly="true"/>
            </column>
            <column name="underbook" display="none" order="110">
                <widget type="text" fieldname="idsubreserva" readonly="true"/>
            </column>
            <column name="reference" order="120">
                <widget type="autocomplete" fieldname="referencia" required="true" readonly="dinamic">
                    <values source="variantes" fieldcode="referencia" fieldtitle="referencia"/>
                </widget>
            </column>
            <column name="quantity" display="right" order="130">
                <widget type="number" fieldname="cantidad" min="0" required="true"/>
            </column>
            <column name="description" numcolumns="12" order="140">
                <widget type="textarea" fieldname="descripcion"/>
            </column>
            <column name="creation-date" order="150">
                <widget type="datetime" fieldname="creationdate" required="true" readonly="true"/>
            </column>
            <column name="user" order="160">
                <widget type="text" fieldname="nick" maxlength="50" readonly="true"/>
            </column>
            <column name="last-update" order="170">
                <widget type="datetime" fieldname="lastupdate" readonly="true"/>
            </column>
            <column name="last-user" order="180">
                <widget type="text" fieldname="lastnick" maxlength="50" readonly="true"/>
            </column>
        </group>
    </columns>
</view>