<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>

        <group name="Invisibles" numcolumns="12">
            <column name="user_fecha" display="none" numcolumns="3" order="110">
                <widget type="date" fieldname="user_fecha" readonly="true"/>
            </column>
            <column name="user_nick" display="none" order="120">
                <widget type="text" fieldname="user_nick" readonly="true"/>
            </column>
        </group>


        <group name="Datos" numcolumns="12">
            <column name="Id" title="Código" numcolumns="3" order="100">
                <widget type="text" fieldname="idstop" readonly="true"/>
            </column>
            <column name="nombre" title="Parada" numcolumns="9" order="110">
                <widget type="text" fieldname="nombre" maxlength="100" required ="true" />
            </column>

            <column name="address" numcolumns="12" order="180">
                <widget type="text" fieldname="direccion" maxlength="100" icon="fas fa-map-marked" />
            </column>


            <column name="zip-code" numcolumns="2" order="200">
                <widget type="text" fieldname="codpostal" maxlength="10" />
            </column>
            <column name="Ciudad" numcolumns="4" order="210">
                <widget type="text" fieldname="ciudad" />
            </column>
            <column name="Provincia" numcolumns="3" order="220">
                <widget type="text" fieldname="provincia" />
            </column>
            <column name="country" titleurl="ListPais" numcolumns="3" order="230">
                <widget type="select" fieldname="codpais" icon="fas fa-globe-americas" onclick="EditPais" required="true">
                    <values source="paises" fieldcode="codpais" fieldtitle="nombre" />
                </widget>
            </column>

                        
            <column name="observations" numcolumns="12" order="120">
                <widget type="textarea" fieldname="observaciones" />
            </column>
        </group>

                        
        <group name="Estado" numcolumns="12" icon="fas fa-cog" title="Estado del registro">
            <column name="Activo" numcolums="12" order="100">
                <widget type="checkbox" fieldname="activo"/>
            </column>
        </group>
        
            
        <group name="Estado_2" numcolumns="12">
            <column name="fechaalta" title="Alta el" numcolumns="3" order="110">
                <widget type="datetime" fieldname="fechaalta" readonly="true"/>
            </column>
            <column name="Creado por" numcolumns="9" order="120">
                <widget type="text" icon="fas fa-user-circle" fieldname="useralta" readonly="true"/>
            </column>


            <column name="fechamodificacion" title="Modificado el" numcolumns="3" order="130">
                <widget type="datetime" fieldname="fechamodificacion" readonly="true"/>
            </column>
            <column name="Modificado por" numcolumns="9" order="140">
                <widget type="text" icon="fas fa-user-circle" fieldname="usermodificacion" readonly="true"/>
            </column>
            
            
            <column name="fechabaja" title="Baja el" numcolumns="3" order="150">
                <widget type="datetime" fieldname="fechabaja" readonly="true"/>
            </column>
            <column name="Borrado por" numcolumns="9" order="160">
                <widget type="text" icon="fas fa-user-circle" fieldname="userbaja" readonly="true"/>
            </column>

            <column name="motivobaja" title="Baja - Motivo" description="Sólo rellenar si registro = NO ACTIVO" numcolumns="12" order="170">
                <widget type="text" fieldname="motivobaja" maxlength="100" />
            </column>
        </group>
             
    </columns>
</view>