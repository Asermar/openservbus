<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="id" display="none" order="0">
                <widget type="text" fieldname="id"/>
            </column>
            <column name="name" order="100">
                <widget type="text" fieldname="name"/>
            </column>
            <column name="color" titleurl="https://getbootstrap.com/docs/4.6/utilities/colors/#background-color"
                    order="110">
                <widget type="select" fieldname="color" translate="true">
                    <values title="color-primary">primary</values>
                    <values title="color-secondary">secondary</values>
                    <values title="color-success">success</values>
                    <values title="color-danger">danger</values>
                    <values title="color-warning">warning</values>
                    <values title="color-info">info</values>
                    <values title="color-dark">dark</values>
                </widget>
            </column>
            <column name="creation-date" order="120">
                <widget type="datetime" fieldname="creationdate" readonly="true"/>
            </column>
            <column name="user" order="130">
                <widget type="text" fieldname="nick" readonly="true"/>
            </column>
            <column name="last-update" order="140">
                <widget type="datetime" fieldname="lastupdate" readonly="true"/>
            </column>
            <column name="last-user" order="150">
                <widget type="text" fieldname="lastnick" readonly="true"/>
            </column>
        </group>
    </columns>
</view>
