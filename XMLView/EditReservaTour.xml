<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="code" order="100">
                <widget type="text" fieldname="id" readonly="true"/>
            </column>
            <column name="operator" order="110">
                <widget type="select" fieldname="idoperador" required="true">
                    <values source="tour_operadores" fieldcode="id" fieldtitle="name"/>
                </widget>
            </column>
            <column name="hire-date" order="120">
                <widget type="date" fieldname="hiredate" required="true"/>
            </column>
            <column name="reference" order="130">
                <widget type="text" fieldname="reference"/>
            </column>
            <column name="status" order="140">
                <widget type="select" fieldname="idestado" required="true">
                    <values source="tour_reservas_estados" fieldcode="id" fieldtitle="name"/>
                </widget>
            </column>
            <column name="notes" order="140" numcolumns="12">
                <widget type="textarea" fieldname="notes" rows="5"/>
            </column>
            <column name="closed" order="150">
                <widget type="checkbox" fieldname="closed"/>
            </column>
        </group>
        <group name="log" numcolumns="12">
            <column name="creation-date" order="100">
                <widget type="datetime" fieldname="creationdate" readonly="true"/>
            </column>
            <column name="user" order="110">
                <widget type="text" fieldname="nick" readonly="true"/>
            </column>
            <column name="last-update" order="120">
                <widget type="datetime" fieldname="lastupdate" readonly="true"/>
            </column>
            <column name="last-user" order="130">
                <widget type="text" fieldname="lastnick" readonly="true"/>
            </column>
        </group>
    </columns>
</view>
