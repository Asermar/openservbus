<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <column name="Id" display="center" order="100">
            <widget type="text" fieldname="idemployee_attendance_management" />
        </column>

        <column name="idemployee" title="Empleado" order="110">
            <widget type="select" fieldname="idemployee" onclick="EditEmployee">
                <values source="employees" fieldcode="idemployee" fieldtitle="nombre" />
            </widget>
        </column>

        <column name="fecha" title="Fecha" display="right" order="120">
            <widget type="datetime" fieldname="fecha" />
        </column>
        
        <column name="origen" title="Origen" order="130">
            <widget type="select" fieldname="origen">
                <values title="Externo">0</values>
                <values title="Manual">1</values>
            </widget>            
        </column>
        <column name="tipoFichaje" title="Tipo fichaje" order="140">
            <widget type="select" fieldname="tipoFichaje">
                <values title="Entrada">1</values>
                <values title="Salida">0</values>
            </widget>            
        </column>
        <column name="ididentification_mean" title="IdentificaciÃ³n - medio" order="150">
            <widget type="select" fieldname="ididentification_mean" onclick="EditIdidentification_mean">
                <values source="identification_means" fieldcode="ididentification_mean" fieldtitle="nombre" />
            </widget>
        </column>
        <column name="idabsence_reason" title="Ausencia - motivo" order="160">
            <widget type="select" fieldname="idabsence_reason" onclick="EditAbsence_reason">
                <values source="absence_reasons" fieldcode="idabsence_reason" fieldtitle="nombre" />
            </widget>
        </column>
        
        <column name="Activo" display="center" order="170">
            <widget type="checkbox" fieldname="activo"/>
        </column>
        
        <column name="fechaalta" title="Alta" display="right" order="180">
            <widget type="datetime" fieldname="fechaalta"/>
        </column>
    </columns>
    
    <rows>
        <row type="status">
            <option color="success" fieldname="activo">1</option>
            <option color="warning" fieldname="activo">0</option>
        </row>
    </rows>    
</view>