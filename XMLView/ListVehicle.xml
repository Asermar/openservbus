<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <column name="id" display="none" order="100">
            <widget type="text" fieldname="idvehicle" />
        </column>
        
        
        <column name="code" order="110">
            <widget type="text" fieldname="cod_vehicle" />
        </column>
        <column name="description" order="120">
            <widget type="text" fieldname="nombre" />
        </column>
        <column name="registration-number-car" order="120">
            <widget type="text" fieldname="matricula" />
        </column>
        <column name="current-registration-date" display="none" order="100">
            <widget type="date" fieldname="fecha_matriculacion_actual"/> 
        </column>
        <column name="offerable" order="100">
            <widget type="text" fieldname="plazas_ofertables" />
        </column>
        
        
        <column name="active" display="center" order="150">
            <widget type="checkbox" fieldname="activo"/>
        </column>
        <column name="creation-date" display="right" order="160">
            <widget type="datetime" fieldname="fechaalta"/>
        </column>
    </columns>
    
    <rows>
        <row type="status">
            <option color="success" title="active-yes" fieldname="activo">1</option>
            <option color="warning" title="active-no" fieldname="activo">0</option>
        </row>
    </rows>    
</view>