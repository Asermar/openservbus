<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>

        <group name="no-visible" numcolumns="12">
            <column name="user_fecha" display="none" numcolumns="3" order="110">
                <widget type="date" fieldname="user_fecha" readonly="true"/>
            </column>
            <column name="user_nick" display="none" order="120">
                <widget type="text" fieldname="user_nick" readonly="true"/>
            </column>
        </group>
        

        <group name="data" numcolumns="12">
            <column name="id" numcolumns="2" order="100">
                <widget type="text" fieldname="idgarage" readonly="true"/>
            </column>
            <column name="description" numcolumns="5" order="110">
                <widget type="text" fieldname="nombre" maxlength="100" required ="true" />
            </column>
            <column name="company" numcolumns="5" order="120">
                <widget type="select" fieldname="idempresa" icon="fas fa-building" onclick="EditEmpresa" required="true" readonly="dinamic">
                    <values source="empresas" fieldcode="idempresa" fieldtitle="nombrecorto" />
                </widget>
            </column>
                                                            
            <column name="address" numcolumns="10" order="130">
                <widget type="text" fieldname="direccion" maxlength="100" icon="fas fa-map-marked" />
            </column>
            <column name="post-office-box" numcolumns="2" order="140">
                <widget type="text" fieldname="apartado" maxlength="10" />
            </column>

            <column name="zip-code" numcolumns="2" order="150">
                <widget type="text" fieldname="codpostal" maxlength="10" />
            </column>
            <column name="city" numcolumns="4" order="160">
                <widget type="text" fieldname="ciudad" />
            </column>
            <column name="province" numcolumns="3" order="170">
                <widget type="text" fieldname="provincia" />
            </column>
            <column name="country" titleurl="ListPais" numcolumns="3" order="180">
                <widget type="select" fieldname="codpais" icon="fas fa-globe-americas" onclick="EditPais" required="true">
                    <values source="paises" fieldcode="codpais" fieldtitle="nombre" />
                </widget>
            </column>
        </group>


        <group name="contact-information" numcolumns="12" icon="fas fa-address-card" title="contact-information">
            <column name="phone" numcolumns="2" order="100">
                <widget type="text" fieldname="telefono1" maxlength="30" icon="fas fa-phone"/>
            </column>
            <column name="phone2" numcolumns="2" order="110">
                <widget type="text" fieldname="telefono2" maxlength="30" icon="fas fa-mobile-alt"/>
            </column>
            <column name="fax" numcolumns="2" order="120">
                <widget type="text" fieldname="fax" maxlength="30" icon="fas fa-fax" />
            </column>
            <column name="email" numcolumns="3" order="130">
                <widget type="text" fieldname="email" maxlength="100" icon="fas fa-envelope" />
            </column>
            <column name="website" numcolumns="3" order="140">
                <widget type="link" fieldname="web" maxlength="100" />
            </column>
            
            <column name="observations" numcolumns="12" order="150">
                <widget type="textarea" fieldname="observaciones" />
            </column>
        </group>
        
            
        <group name="record-status" numcolumns="12" icon="fas fa-cog" title="Estado del registro">
            <column name="active" numcolums="12" order="100">
                <widget type="checkbox" fieldname="activo"/>
            </column>
        </group>
        
            
        <group name="record-status_2" numcolumns="12">
            <column name="creation-date" numcolumns="3" order="110">
                <widget type="datetime" fieldname="fechaalta" readonly="true"/>
            </column>
            <column name="created-by" numcolumns="9" order="120">
                <widget type="text" icon="fas fa-user-circle" fieldname="useralta" readonly="true"/>
            </column>

            <column name="modification-date" numcolumns="3" order="130">
                <widget type="datetime" fieldname="fechamodificacion" readonly="true"/>
            </column>
            <column name="modified-by" numcolumns="9" order="140">
                <widget type="text" icon="fas fa-user-circle" fieldname="usermodificacion" readonly="true"/>
            </column>
            
            <column name="deletion-date" numcolumns="3" order="150">
                <widget type="datetime" fieldname="fechabaja" readonly="true"/>
            </column>
            <column name="deleted-by" numcolumns="9" order="160">
                <widget type="text" icon="fas fa-user-circle" fieldname="userbaja" readonly="true"/>
            </column>

            <column name="deleted-motif" description="only-fill-inactive-record" numcolumns="12" order="170">
                <widget type="text" fieldname="motivobaja" maxlength="100" />
            </column>
        </group>
             
    </columns>
</view>