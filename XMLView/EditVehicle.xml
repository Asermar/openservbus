<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>

        
        <group name="Invisibles" numcolumns="12">
            <column name="user_fecha" display="none" order="100">
                <widget type="date" fieldname="user_fecha" readonly="true"/> 
            </column>
            <column name="user_nick" display="none" order="110">
                <widget type="text" fieldname="user_nick" readonly="true"/>
            </column>
            
            <column name="Id" display="none" order="120">
                <widget type="text" fieldname="idvehicle" readonly="true"/>
            </column>
        </group>
        
        
        <group name="Datos" numcolumns="12">
            
            <column name="Codigo" description="Es opcional" numcolumns="2" order="100">
                <widget type="text" fieldname="cod_vehicle" icon="fas fa-bus-alt" maxlength="6" readonly="dinamic" />
            </column>
            <column name="Nombre" numcolumns="5" order="110">
                <widget type="text" fieldname="nombre" maxlength="100" required="true"/>
            </column>
            <column name="Matricula"  title="Matrícula" numcolumns="2" order="120">
                <widget type="text" fieldname="matricula" maxlength="25" required="true"/>
            </column>
            <column name="motor_chasis" title="Motor/Chasis" numcolumns="3" order="130">
                <widget type="text" fieldname="motor_chasis" maxlength="50"/>
            </column>


            <column name="numero_bastidor" title="Nº.bastidor" numcolumns="4" order="140">
                <widget type="text" fieldname="numero_bastidor" maxlength="50"/>
            </column>
            
            <column name="carroceria" title="Carroceria" numcolumns="4" order="150">
                <widget type="text" fieldname="carroceria" maxlength="50"/>
            </column>
            <column name="numero_obra" title="Nº.obra" numcolumns="4" order="160">
                <widget type="text" fieldname="numero_obra" maxlength="50"/>
            </column>
            
            
            <column name="fecha_matriculacion_primera" title="Fecha matriculación 1ª" numcolumns="3" order="170">
                <widget type="date" fieldname="fecha_matriculacion_primera" />
            </column>
            <column name="fecha_matriculacion_actual" title="Fecha matriculación actual" numcolumns="3" order="180">
                <widget type="date" fieldname="fecha_matriculacion_actual" />
            </column>
            <column name="garage" numcolumns="6" order="190">
                <widget type="select" fieldname="idgarage" icon="fas fa-warehouse" onclick="EditGarage">
                    <values source="garages" fieldcode="idgarage" fieldtitle="nombre" />
                </widget>
            </column>
        </group>
        

        <group name="Plazas" numcolumns="12" icon="fas fa-chair" title="Plazas">
            <column name="plazas_segun_permiso" title="Según permiso" numcolumns="3" order="100">
                <widget type="text" fieldname="plazas_segun_permiso" maxlength="5"/>
            </column>
            <column name="plazas_segun_ficha_tecnica" title="Según ficha técnica" numcolumns="6" order="110">
                <widget type="text" fieldname="plazas_segun_ficha_tecnica" maxlength="50"/>
            </column>
            <column name="plazas_ofertables" title="Ofertables" numcolumns="3" order="120">
                <widget type="text" fieldname="plazas_ofertables" maxlength="5" required="true"/>
            </column>
        </group>


        <group name="VehiculoNuestroExterno" numcolumns="12" icon="fas fa-bus-alt" title="Vehículo nuestro o externo">
            <column name="company" numcolumns="6" order="100">
                <widget type="select" fieldname="idempresa" icon="fas fa-building" onclick="EditEmpresa">
                    <values source="empresas" fieldcode="idempresa" fieldtitle="nombrecorto" />
                </widget>
            </column>
            <column name="Colaborador" numcolumns="6" order="110">
                <widget type="select" fieldname="idcollaborator" icon="fas fa-business-time" onclick="EditCollaborator">
                    <values source="collaborators" fieldcode="idcollaborator" fieldtitle="codproveedor" />
                </widget>
            </column>
        </group>


        <group name="Combustible" numcolumns="12" icon="fas fa-gas-pump" title="Combustible">
            <column name="combustible"  title="Tipo de combustible" numcolumns="6" order="100">
                <widget type="select" fieldname="idfuel_type" icon="fas fa-gas-pump" onclick="EditFuel_type">
                    <values source="fuel_types" fieldcode="idfuel_type" fieldtitle="nombre" />
                </widget>
            </column>
        </group>
        

        <group name="Otros datos" numcolumns="12" icon="fas fa-truck-loading" title="Otos datos de interés">
            <column name="configuraciones_especiales" numcolumns="12" title="Configuraciones especiales" order="100">
                <widget type="textarea" fieldname="configuraciones_especiales" />
            </column>
            <column name="Observaciones" numcolumns="12" title="Observaciones" order="110">
                <widget type="textarea" fieldname="observaciones" />
            </column>
        </group>

        
        <group name="Estado" numcolumns="12" icon="fas fa-cog" title="Estado del registro">
            <column name="Activo" numcolums="12" order="100">
                <widget type="checkbox" fieldname="activo"/>
            </column>
        </group>
        
            
        <group name="Estado_2" numcolumns="12">
            <column name="fechaalta" title="Alta el" numcolumns="3" order="100">
                <widget type="datetime" fieldname="fechaalta" readonly="true"/>
            </column>
            <column name="Creado por" numcolumns="9" order="110">
                <widget type="text" icon="fas fa-user-circle" fieldname="useralta" readonly="true"/>
            </column>


            <column name="fechamodificacion" title="Modificado el" numcolumns="3" order="120">
                <widget type="datetime" fieldname="fechamodificacion" readonly="true"/>
            </column>
            <column name="Modificado por" numcolumns="9" order="130">
                <widget type="text" icon="fas fa-user-circle" fieldname="usermodificacion" readonly="true"/>
            </column>
            
            
            <column name="fechabaja" title="Baja el" numcolumns="3" order="140">
                <widget type="datetime" fieldname="fechabaja" readonly="true"/>
            </column>
            <column name="Borrado por" numcolumns="9" order="150">
                <widget type="text" icon="fas fa-user-circle" fieldname="userbaja" readonly="true"/>
            </column>
        </group>
             
             
    </columns>
</view>