<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="id" order="100" display="none">
                <widget type="text" fieldname="id" readonly="true"/>
            </column>
            <column name="service" order="110">
                <widget type="select" fieldname="idservicio" onclick="EditServicioTour" required="true">
                    <values source="tour_servicios" fieldcode="id" fieldtitle="id"/>
                </widget>
            </column>
            <column name="contact" order="120">
                <widget type="autocomplete" fieldname="idcontacto" onclick="EditContacto" required="true">
                    <values source="contactos" fieldcode="idcontacto" fieldtitle="nombre"/>
                </widget>
            </column>
            <column name="creation-date" order="130">
                <widget type="datetime" fieldname="creationdate" readonly="true"/>
            </column>
            <column name="user" order="140">
                <widget type="text" fieldname="nick" readonly="true"/>
            </column>
            <column name="last-update" order="150">
                <widget type="datetime" fieldname="lastupdate" readonly="true"/>
            </column>
            <column name="last-user" order="160">
                <widget type="text" fieldname="lastnick" readonly="true"/>
            </column>
        </group>
    </columns>
</view>
