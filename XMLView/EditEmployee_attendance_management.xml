<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>

        <group name="Invisibles" numcolumns="12">
            <column name="user_fecha" display="none" numcolumns="3" order="100">
                <widget type="date" fieldname="user_fecha" readonly="true"/>
            </column>
            <column name="user_nick" display="none" order="110">
                <widget type="text" fieldname="user_nick" readonly="true"/>
            </column>
        </group>


        <group name="Datos" numcolumns="12">
            <column name="Id" title="Código" numcolumns="2" order="100">
                <widget type="text" fieldname="idemployee_attendance_management" readonly="true"/>
            </column>
            
            <column name="idemployee" title="Empleado" titleurl="ListEmployee" numcolumns="4" order="110">
                <widget type="select" fieldname="idemployee" icon="far fa-id-card" onclick="EditEmployee" required="true">
                    <values source="employees" fieldcode="idemployee" fieldtitle="nombre" />
                </widget>
            </column>
            
            <column name="fecha_dia" title="Fecha" numcolumns="2" order="120">
                <widget type="date" fieldname="fecha_dia" required="true" />
            </column>
            <column name="fecha_hora" title="Hora" numcolumns="2" order="130">
                <widget type="time" fieldname="fecha_hora"/>
            </column>
            
            <column name="origen" title="Origen" numcolumns="2" order="140">
                <widget type="select" fieldname="origen" required="true" readonly="true">
                    <values title="Externo">0</values>
                    <values title="Manual">1</values>
                </widget>            
            </column>


            <column name="tipoFichaje" title="Tipo fichaje" numcolumns="2" order="150">
                <widget type="select" fieldname="tipoFichaje" required="true">
                    <values title="Entrada">1</values>
                    <values title="Salida">0</values>
                </widget>            
            </column>
            <column name="ididentification_mean" title="Identificación - medio" titleurl="ListIdentification_mean" numcolumns="5" order="160">
                <widget type="select" fieldname="ididentification_mean" icon="far fa-hand-point-right" onclick="EditIdentification_mean" required="true">
                    <values source="identification_means" fieldcode="ididentification_mean" fieldtitle="nombre" />
                </widget>
            </column>
            <column name="idabsence_reason" title="Ausencia - motivo" titleurl="ListAbsence_reason" numcolumns="5" order="170">
                <widget type="select" fieldname="idabsence_reason" icon="fas fa-first-aid" onclick="EditAbsence_reason">
                    <values source="absence_reasons" fieldcode="idabsence_reason" fieldtitle="nombre" />
                </widget>
            </column>
        </group>

                
        <group name="Observ" numcolumns="12" icon="fas fa-cog" title="Otras anotaciones">
            <column name="observations" numcolumns="12" order="260">
                <widget type="textarea" fieldname="observaciones" />
            </column>
        </group>
        
            
        <group name="Estado" numcolumns="12" icon="fas fa-cog" title="Estado del registro">
            <column name="Activo" numcolums="12" order="100">
                <widget type="checkbox" fieldname="activo"/>
            </column>
        </group>
        
            
        <group name="Estado_2" numcolumns="12">
            <column name="fechaalta" title="Alta el" numcolumns="3" order="110">
                <widget type="datetime" fieldname="fechaalta" readonly="true"/>
            </column>
            <column name="Creado por" numcolumns="9" order="120">
                <widget type="text" icon="fas fa-user-circle" fieldname="useralta" readonly="true"/>
            </column>


            <column name="fechamodificacion" title="Modificado el" numcolumns="3" order="130">
                <widget type="datetime" fieldname="fechamodificacion" readonly="true"/>
            </column>
            <column name="Modificado por" numcolumns="9" order="140">
                <widget type="text" icon="fas fa-user-circle" fieldname="usermodificacion" readonly="true"/>
            </column>
            
            
            <column name="fechabaja" title="Baja el" numcolumns="3" order="150">
                <widget type="datetime" fieldname="fechabaja" readonly="true"/>
            </column>
            <column name="Borrado por" numcolumns="9" order="160">
                <widget type="text" icon="fas fa-user-circle" fieldname="userbaja" readonly="true"/>
            </column>

            <column name="motivobaja" title="Baja - Motivo" description="Sólo rellenar si registro = NO ACTIVO" numcolumns="12" order="170">
                <widget type="text" fieldname="motivobaja" maxlength="100" />
            </column>
        </group>
             
    </columns>
</view>