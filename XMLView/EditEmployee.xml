<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>

        
        <group name="Invisibles" numcolumns="12">
            <column name="user_fecha" display="none" order="100">
                <widget type="date" fieldname="user_fecha" readonly="true"/> 
            </column>
            <column name="user_nick" display="none" order="110">
                <widget type="text" fieldname="user_nick" readonly="true"/>
            </column>
            
            <column name="Id" display="none" order="120">
                <widget type="text" fieldname="idemployee" readonly="true"/>
            </column>
        </group>
        
        
        <group name="Datos" numcolumns="12">
            
            <column name="Codigo" description="Es opcional" numcolumns="2" order="100">
                <widget type="text" fieldname="cod_employee" icon="fas fa-hashtag" maxlength="6" readonly="dinamic" />
            </column>
            <column name="Nombre" numcolumns="8" order="110">
                <widget type="text" fieldname="nombre" maxlength="100" required="true"/>
            </column>
            <column name="Conductor" description="No modificarlo, se actualiza sÃ³lo"  numcolums="2" order="120">
                <widget type="checkbox" fieldname="driver_yn" readonly="true"/>
            </column>


            <column name="Nacido el" numcolumns="2" order="130">
                <widget type="date" fieldname="fecha_nacimiento" />
            </column>
            <column name="Num. Seg. Social" numcolumns="2" order="140">
                <widget type="text" fieldname="num_seg_social" maxlength="30"/>
            </column>
            <column name="fiscal-id" titleurl="EditSettings?activetab=ListIdentificadorFiscal" numcolumns="2" order="150">
                <widget type="select" fieldname="tipoidfiscal" required="true">
                    <values source="idsfiscales" fieldcode="tipoidfiscal" fieldtitle="tipoidfiscal" />
                </widget>
            </column>
            <column name="fiscal-number" numcolumns="2" order="160">
                <widget type="text" fieldname="cifnif" maxlength="30" icon="fas fa-id-card"/>
            </column>
            <column name="Usuario FacturaScripts" titleurl="ListUser" numcolumns="4" order="170">
                <widget type="select" fieldname="user_facturascripts_nick" icon="fas fa-user-circle" onclick="EditUser">
                    <values source="users" fieldcode="nick" fieldtitle="nick" />
                </widget>
            </column>


            <column name="address" numcolumns="10" order="180">
                <widget type="text" fieldname="direccion" maxlength="100" icon="fas fa-map-marked" />
            </column>
            <column name="post-office-box" numcolumns="2" order="190">
                <widget type="text" fieldname="apartado" maxlength="10" />
            </column>


            <column name="zip-code" numcolumns="2" order="200">
                <widget type="text" fieldname="codpostal" maxlength="10" />
            </column>
            <column name="Ciudad" numcolumns="4" order="210">
                <widget type="text" fieldname="ciudad" />
            </column>
            <column name="Provincia" numcolumns="3" order="220">
                <widget type="text" fieldname="provincia" />
            </column>
            <column name="country" titleurl="ListPais" numcolumns="3" order="230">
                <widget type="select" fieldname="codpais" icon="fas fa-globe-americas" onclick="EditPais" required="true">
                    <values source="paises" fieldcode="codpais" fieldtitle="nombre" />
                </widget>
            </column>
        </group>
        

        <group name="EmpleadoNuestroExterno" numcolumns="12" icon="fas fa-address-card" title="Empleado nuestro o externo">
            <column name="company" numcolumns="6" order="100">
                <widget type="select" fieldname="idempresa" icon="fas fa-building" onclick="EditEmpresa">
                    <values source="empresas" fieldcode="idempresa" fieldtitle="nombrecorto" />
                </widget>
            </column>
            <column name="Colaborador" numcolumns="6" order="110">
                <widget type="select" fieldname="idcollaborator" icon="fas fa-business-time" onclick="EditCollaborator">
                    <values source="collaborators" fieldcode="idcollaborator" fieldtitle="nombre" />
                </widget>
            </column>
        </group>

        <group name="Datos de contacto" numcolumns="12" icon="fas fa-address-card" title="Datos de contacto">
            <column name="phone" numcolumns="3" order="100">
                <widget type="text" fieldname="telefono1" maxlength="30" icon="fas fa-phone"/>
            </column>
            <column name="phone2" numcolumns="3" order="110">
                <widget type="text" fieldname="telefono2" maxlength="30" icon="fas fa-mobile-alt"/>
            </column>
            <column name="email" numcolumns="3" order="120">
                <widget type="text" fieldname="email" maxlength="100" icon="fas fa-envelope" />
            </column>
            <column name="website" numcolumns="3" order="130">
                <widget type="link" fieldname="web" maxlength="100" />
            </column>
            
            
            <column name="observations" numcolumns="12" order="140">
                <widget type="textarea" fieldname="observaciones" />
            </column>
        </group>

        
        <group name="Estado" numcolumns="12" icon="fas fa-cog" title="Estado del registro">
            <column name="Activo" numcolums="12" order="100">
                <widget type="checkbox" fieldname="activo"/>
            </column>
        </group>
        
            
        <group name="Estado_2" numcolumns="12">
            <column name="fechaalta" title="Alta el" numcolumns="3" order="100">
                <widget type="datetime" fieldname="fechaalta" readonly="true"/>
            </column>
            <column name="Creado por" numcolumns="9" order="110">
                <widget type="text" icon="fas fa-user-circle" fieldname="useralta" readonly="true"/>
            </column>


            <column name="fechamodificacion" title="Modificado el" numcolumns="3" order="120">
                <widget type="datetime" fieldname="fechamodificacion" readonly="true"/>
            </column>
            <column name="Modificado por" numcolumns="9" order="130">
                <widget type="text" icon="fas fa-user-circle" fieldname="usermodificacion" readonly="true"/>
            </column>
            
            
            <column name="fechabaja" title="Baja el" numcolumns="3" order="140">
                <widget type="datetime" fieldname="fechabaja" readonly="true"/>
            </column>
            <column name="Borrado por" numcolumns="9" order="150">
                <widget type="text" icon="fas fa-user-circle" fieldname="userbaja" readonly="true"/>
            </column>
        </group>
             
             
    </columns>
</view>