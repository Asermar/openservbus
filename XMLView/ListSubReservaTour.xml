<view>
    <columns>
        <column name="id" order="100">
            <widget type="text" fieldname="id" />
        </column>
        <column name="reference" order="110">
            <widget type="text" fieldname="reference"/>
        </column>
        <column name="booking" order="120">
            <widget type="select" fieldname="idreserva" onclick="EditReservaTour">
                <values source="tour_reservas" fieldcode="id" fieldtitle="id"/>
            </widget>
        </column>
        <column name="operator" order="130">
            <widget type="select" fieldname="idoperador" onclick="EditTourOperador">
                <values source="tour_operadores" fieldcode="id" fieldtitle="name"/>
            </widget>
        </column>
        <column name="date" order="140">
            <widget type="date" fieldname="date"/>
        </column>
        <column name="status" order="150">
            <widget type="select" fieldname="idestado">
                <values source="tour_reservas_estados" fieldcode="id" fieldtitle="name"/>
            </widget>
        </column>
        <column name="closed" order="160" display="center">
            <widget type="checkbox" fieldname="closed"/>
        </column>
        <column name="creation-date" order="170">
            <widget type="datetime" fieldname="creationdate"/>
        </column>
        <column name="user" order="180">
            <widget type="text" fieldname="nick"/>
        </column>
        <column name="last-update" order="190">
            <widget type="datetime" fieldname="lastupdate"/>
        </column>
        <column name="last-user" order="200">
            <widget type="text" fieldname="lastnick"/>
        </column>
    </columns>
</view>
